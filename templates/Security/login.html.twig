{% extends "base.html.twig"%}

{% block title "login" %}

    {% block body %}
        <div class="jumbotron text-center"> 
            <h1>  Formulaire de connexion:</h1>
            <p>  Bonjour je suis sur Symfony4 </p>
        </div>
        <div class="container mt-4"> 
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form method="POST" action="{{ path('login') }}">
                <div class="form-group">
                    <label for="username">Nom utilisateur:</label>
                    <input type="text" class="form-control" name="_username" id="username"  placeholder="Enter user name" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe:</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="_password"
                </div>

                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>



    {% endblock %}

